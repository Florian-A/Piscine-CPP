# minimal color codes
END=$'\x1b[0m
GREEN=$'\x1b[32m
YELLOW=$'\x1b[33m

# objects
OBJS = $(SRCS:.cpp=.o)
SRCS = $(addprefix $(SRC_DIR)/, \
main.cpp Bureaucrat.cpp Form.cpp \
)

# headers
HEADERS = $(addprefix $(INC_DIR)/, \
Bureaucrat.hpp Form.hpp \
)

# directories
SRC_DIR	= ./sources
INC_DIR	= ./includes

# name and flags
MF = Makefile
CPP = c++
FLAGS = -std=c++98 -Wall -Wextra -Werror 
NAME = Archibald

all : $(NAME)

$(NAME) : $(MF) $(OBJS)
	@$(CPP) $(FLAGS) $(OBJS) -o $(NAME)
	@echo "\n${GREEN}> Compilation of $(NAME) is success üéâ${END}"

%.o : %.cpp $(HEADERS) $(MF)
	@/bin/echo -n .
	@$(CPP) $(FLAGS) -c $< -o $@ -I $(INC_DIR)

clean :
	@rm -f $(OBJS)
	@echo "${YELLOW}> All objects files of $(NAME) have been deleted ‚ùå${END}"

fclean : clean
	@rm -f $(NAME)
	@echo "${YELLOW}> Cleaning of $(NAME) has been done ‚ùå${END}"

re: fclean
	@make $(NAME)

.PHONY:	all clean fclean re